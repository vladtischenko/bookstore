%p#notice= notice

%div
  = @book.title
%div{style: "float: left"}
  = @book.picture
%table
  %tr
    %td
      $
      = @book.price
    %td
      = form_for oi = OrderItem.new do |f|
        = f.number_field :quantity, min: 1, max: 10
        = f.hidden_field :book_id, value: @book.id
        = f.hidden_field :price, value: @book.price
        = f.submit 'add to cart'
  %tr
    %td
      %div
        = @book.description

%div{style: "float: left"}
  Reviews
%div 
  = link_to 'add review for this book', new_book_rating_path(@book)

%br

- @book.ratings.each do |rating|
  - if rating.allow
    %table
      %tr
        %td= rating.rate
        %td= rating.title
        %td= rating.created_at
    %div
      by
      = rating.user
    %div
      = rating.text
  - else 
    review is not verify by admin yet
  %br
  %br
