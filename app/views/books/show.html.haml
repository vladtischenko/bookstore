%p#notice= notice

%div
  = @book.title
%div{style: "float: left"}
  = @book.picture
%table
  %tr
    %td
      $
      = @book.price
    %td
      %input#number.quantity{value: '1', type: 'number', required: true, min: 1}
    %td
      = link_to 'add to card'
  %tr
    %td
      %div
        = @book.description

%div{style: "float: left"}
  Reviews
%div 
  = link_to 'add review for this book', new_book_rating_path(@book)

- @book.ratings.each do |rating|
  - if rating.allow
    %table
      %tr
        %td= rating.rate
        %td= rating.title
        %td= rating.created_at
    %div
      by
      = rating.user
    %div
      = rating.text
